@model IEnumerable<JuBai.Models.User>

@{
    ViewData["Title"] = "Users List";
}

<h2>Users List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th> <!-- Column header for Name -->
            <th>Email</th> <!-- Column header for Email -->
            <th></th> <!-- Empty column for action buttons -->
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>
                @user.Name <!-- Display Name for each User -->
            </td>
            <td>
                @user.Email <!-- Display Email for each User -->
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
